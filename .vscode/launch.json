{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm",
        "--experimental-specifier-resolution=node"
      ],
      "args": ["src/lib/main.ts"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}

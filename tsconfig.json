{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    "calc.test.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
